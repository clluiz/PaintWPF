<Window x:Class="PaintWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:paint="clr-namespace:Paint;assembly=Paint"
        Title="MainWindow" Height="800" Width="600" Initialized="Window_Initialized">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="500"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="Black" BorderThickness="2" Width="520" Height="250">
            <paint:ImageEditor x:Name="editor" BorderThickness="2" Width="520" Height="250" DrawingMode="Rectangle"/>
        </Border>
        
        <StackPanel Grid.Row="1">
            <Button Click="Button_Click" Height="50">Salvar</Button>
            <Button Click="Button_Click_1" Height="50">Recarregar</Button>
        </StackPanel>
        


    </Grid>
</Window>
